@model IEnumerable<AudioStore.Models.Product>

<div class="row pb-3 card_block">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title-h5 text-primary">@product.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title text-info">by <b>@product.Manufacturer.Name</b></p>
                            </div>
                            <div class="pl-1">
                                <p>List Price:<b>$@product.Price.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id=@product.ProductID>
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
