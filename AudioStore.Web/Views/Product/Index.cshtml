@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">Create Product</a>
        </div>
    </div>


    <table id="tblData" class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category Name</th>
                <th>Manufacturer name</th>
                <th>Price</th>
                <th>In Stock</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}