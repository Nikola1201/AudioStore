@model IEnumerable<AudioStore.Models.ViewModels.ShoppingCartVM>

<div class="container mt-3">
    <h2>Shopping Cart</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.Product.ImageUrl" class="img-thumbnail" style="width: 100px; height: auto;" alt="Product Image"></td>
                    <td>@item.Product.Name</td>
                    <td>@item.Count</td>
                    <td>$@item.Product.Price.ToString("0.00")</td>
                    <td>$@(item.Product.Price * item.Count).ToString("0.00")</td>
                    <td>
                        <!-- Example action buttons -->
                        <a href="#" class="btn btn-info btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
