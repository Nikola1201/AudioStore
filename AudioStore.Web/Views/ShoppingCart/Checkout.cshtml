@model Tuple<AudioStore.Models.ApplicationUser, IEnumerable<AudioStore.Models.ShoppingCart>>

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <h2>Checkout</h2>
    <form asp-action="Checkout" method="post" class="mb-5">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Item1.Name" required>
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Item1.Email" required>
        </div>
        <div class="mb-3">
            <label for="StreetAddress" class="form-label">Street Address</label>
            <input type="text" class="form-control" id="StreetAddress" name="StreetAddress" value="@Model.Item1.StreetAddress">
        </div>
        <div class="mb-3">
            <label for="City" class="form-label">City</label>
            <input type="text" class="form-control" id="City" name="City" value="@Model.Item1.City">
        </div>
        <div class="mb-3">
            <label for="PostalCode" class="form-label">Postal Code</label>
            <input type="number" class="form-control" id="PostalCode" name="PostalCode" value="@Model.Item1.PostalCode">
        </div>
        <button type="submit" class="btn btn-success">Order now!</button>
    </form>

   
     
    <h3>Order Details</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item2)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Count</td>
                    <td>@item.Total</td>
                </tr>
            }
        </tbody>
    </table>
</div>
