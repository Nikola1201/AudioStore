@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div>
            <a  asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;Create Category
            </a>
        </div>
    </div>

    <table id="tblData" class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Super Category Name</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/category.js"></script>
}