@model AudioStore.Models.Category

<form method="post">
    <div class="border">
        <div class="row pb-2">
            <h2 class=" text-primary">Edit Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SuperCategory.Name">@Model.SuperCategory.Name</label>
            <input asp-for="SuperCategory.Name" class="form-control" readonly />
            <span asp-validation-for="SuperCategory.Name" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="CategoryID" />   

        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}